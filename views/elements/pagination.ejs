<% if (pages > 0) { %>
<div class="w-100 text-center">
    <nav class="blog-pagination justify-content-center d-flex right">
        <ul class="pagination text-center">
            <% if (current == 1) { %>
            <li class="disabled page-item"><a class="page-link" aria-label="First">First</a></li>
            <% } else { %>
            <li class="page-item"><a href="/shop/" class="page-link" aria-label="First">First</a></li>
            <% } %>
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="disabled page-item"><a class="page-link">...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active page-item"><a class="page-link"><%= i %></a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link" href="/shop?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="disabled page-item"><a class="page-link">...</a></li>
            <% } %>
            <% } %>
            <% if (current == pages) { %>
            <li class="disabled page-item"><a class="page-link">Last</a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link" href="/shop?page=<%= pages %>">Last</a></li>
            <% } %>
        </ul>
    </nav>
</div>

<% } %>