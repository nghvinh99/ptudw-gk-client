<!doctype html>
<html lang="zxx">

<head>
	<title><%= title %></title>
	<% include ../../elements/meta %>
</head>

<body class="cart included">
	<% include ../../elements/header %>

	<% include ../../elements/breadcrumb %>

	<!--================Checkout Area =================-->
	<section class="checkout_area section_padding">
		<div class="container">			
			<div class="billing_details">
				<div class="row">
					<div class="col-lg-8">
						<h3>Chi tiết hóa đơn</h3>
						<form class="row contact_form" action="/shop/cart" method="post" novalidate="novalidate">
							<div class="col-md-12 form-group p_star">
								<input type="text" class="form-control" id="name" name="name" 
								placeholder="Tên"/>
							</div>
							<div class="col-md-6 form-group p_star">
								<input type="text" class="form-control" id="phone" name="phone" 
								placeholder="Số điện thoại"/>
							</div>
							<div class="col-md-6 form-group p_star">
								<input type="text" class="form-control" id="email" name="email" 
								placeholder="Email"/>
							</div>
							<div class="col-md-12 form-group p_star">
								<input type="text" class="form-control" id="address" name="address" 
								placeholder="Địa chỉ"/>
							</div>
							<div class="col-md-12 form-group">
								<div class="creat_account">
									<h3>Chi tiết giao hàng</h3>
								</div>
								<textarea class="form-control" name="message" id="message" rows="1"
									placeholder="Ghi chú đơn hàng"></textarea>
							</div>
						</form>
					</div>
					<div class="col-lg-4">
						<div class="order_box">
							<h2>Đơn hàng của bạn</h2>
							<ul class="list">
								<li>
									<a>Sản phẩm
										<span>Tổng</span>
									</a>
								</li>
								<li id="itemCheck">
								</li>
							</ul>
							<ul class="list list_2">
								<li>
									<a>Thành tiền
										<span id="sumMoney">0 VNĐ</span>
									</a>
								</li>
								<li>
									<a href="/shop/cart">Giao hàng
										<span> 30.000 VNĐ</span>
									</a>
								</li>
								<li>
									<a href="/shop/cart">Tổng cộng
										<span id="sumMoneysi">0 VNĐ</span>
									</a>
								</li>
							</ul>
							<div class="payment_item">
								<div class="radion_btn">
									<input type="radio" id="f-option5" name="selector" checked/>
									<label for="f-option5">COD</label>
									<div class="check"></div>
								</div>
								<p>
									Xin chuẩn bị tiền mặt khi nhận hàng
								</p>
							</div>
							<div class="payment_item active">
								<div class="radion_btn">
									<input type="radio" id="f-option6" name="selector" />
									<label for="f-option6">Tín dụng </label>
									<img src="/images/product/single-product/card.jpg" alt="" />
									<div class="check"></div>
								</div>
								<p>
									Xin gửi thông tin xác nhận về shop trực tiếp hoặc thông qua liên hệ
								</p>
							</div>
							<a id="checkout" class="btn_3" type="button">Xác nhận</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--================End Checkout Area =================-->

	<% include ../../elements/subscribe %>

	<% include ../../elements/footer %>

	<% include ../../elements/scripts %>
</body>

</html>