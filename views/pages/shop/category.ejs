<head>
    <title><%= title%></title>
    <% include ../../elements/meta %>
</head>

<body class="bg-white">

    <% include ../../elements/header %>

    <% include ../../elements/breadcrumb %>

    <!--================Category Product Area =================-->
    <section class="cat_product_area section_padding border_top">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="left_sidebar_area">
                        <aside class="left_widgets p_filter_widgets sidebar_box_shadow">
                            <div class="l_w_title">
                                <h3>Phân loại</h3>
                            </div>
                            <div class="widgets_inner">
                                <ul class="list">
                                    <% category.forEach((category) => {%>
                                    <li>
                                        <a href="/shop/category/<%= category.id %>"><%= category.name %></a>
                                    </li>
                                    <% }); %>
                                </ul>
                            </div>
                        </aside>

                        <aside class="left_widgets p_filter_widgets sidebar_box_shadow">
                            <div class="l_w_title">
                                <h3>Lọc sản phẩm</h3>
                            </div>
                            <div class="widgets_inner">
                                <ul class="list">
                                    <p>Nhãn hiệu</p>
                                    <li>
                                        <input type="radio" aria-label="Radio button for following text input">
                                        <a>Nike</a>
                                    </li>
                                    <li>
                                        <input type="radio" aria-label="Radio button for following text input">
                                        <a>Adidas</a>
                                    </li>
                                    <li class="active">
                                        <input type="radio" aria-label="Radio button for following text input">
                                        <a>Levi's</a>
                                    </li>
                                    <li>
                                        <input type="radio" aria-label="Radio button for following text input">
                                        <a>Gucci</a>
                                    </li>
                                    <li>
                                        <input type="radio" aria-label="Radio button for following text input">
                                        <a>Dior</a>
                                    </li>
                                </ul>
                                <ul class="list">
                                    <p>Màu</p>
                                    <li>
                                        <input type="radio" aria-label="Radio button for following text input">
                                        <a>Đen</a>
                                    </li>
                                    <li>
                                        <input type="radio" aria-label="Radio button for following text input">
                                        <a>Trắng</a>
                                    </li>
                                    <li>
                                        <input type="radio" aria-label="Radio button for following text input">
                                        <a>Đỏ đen</a>
                                    </li>
                                    <li>
                                        <input type="radio" aria-label="Radio button for following text input">
                                        <a>Vàng</a>
                                    </li>
                                    <li>
                                        <input type="radio" aria-label="Radio button for following text input">
                                        <a>Lam</a>
                                    </li>
                                </ul>
                            </div>
                        </aside>

                        <aside class="left_widgets p_filter_widgets price_rangs_aside sidebar_box_shadow">
                            <div class="l_w_title">
                                <h3>Lọc giá</h3>
                            </div>
                            <div class="widgets_inner">
                                <div class="range_item">
                                    <!-- <div id="slider-range"></div> -->
                                    <input type="text" class="js-range-slider" value="" />
                                    <div class="d-flex align-items-center">
                                        <div class="price_text">
                                            <p>Giá :</p>
                                        </div>
                                        <div class="price_value d-flex justify-content-center">
                                            <input type="text" class="js-input-from" id="amount" readonly />
                                            <span>đến</span>
                                            <input type="text" class="js-input-to" id="amount" readonly />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </aside>

                        <aside class="section-top-border text-center" style="margin-top:-70px">
                            <a href="/shop" class="genric-btn primary-border">Tìm</a>
                        </aside>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="product_top_bar d-flex justify-content-between align-items-center">
                                <div class="single_product_menu product_bar_item">
                                    <h2><%= range %></h2>
                                </div>
                                <div class="product_top_bar_iner product_bar_item d-flex">
                                    <div class="product_bar_single">
                                        <select class="wide">
                                            <option data-display="Sắp xếp">Sắp xếp</option>
                                            <option value="1">Giá tăng dần</option>
                                            <option value="2">Giá giảm dần</option>
                                        </select>
                                    </div>
                                    <div class="product_bar_single">
                                        <select>
                                            <option data-display="Hiện 12">Hiện 12</option>
                                            <option value="1">Hiện 24</option>
                                            <option value="2">Hiện 36</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% product.forEach((product) => {%>
                        <div class="col-lg-4 col-sm-6">
                            <div class="single_category_product">
                                <div class="single_category_img">
                                    <a href="/shop/<%= product.id %>">
                                        <img src="<%= product.images[0] %>" alt="">
                                    </a>
                                    <div class="category_social_icon">
                                        <ul>
                                            <li><a href="/shop"><i class="ti-heart"></i></a></li>
                                            <li><a href="/shop"><i class="ti-bag"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="category_product_text">
                                        <a href="shop/<%=  product.id %>">
                                            <h5><%=  product.name %></h5>
                                        </a>
                                        <p><%=  product.price %> VNĐ</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Category Product Area =================-->

    <% include ../../elements/feature %>

    <% include ../../elements/subscribe %>

    <% include ../../elements/footer %>

    <% include ../../elements/scripts %>
</body>

</html>